{
    "functions": {
      "app/api/**/*": {
        "memory": 1536,
        "maxDuration": 60
      }
    },
    "headers": [
      {
        "source": "/api/(.*)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-store, max-age=0"
          },
          {
            "key": "Connection",
            "value": "keep-alive"
          }
        ]
      }
    ]
  }
  
  